{
  "manifest_version": 3,
  "name": "Float Console",
  "version": "1.0.0",
  "description": "A floating console that captures logs, warnings, and errors for quick debugging",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "Configure Float Console"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "toggle_dock": {
      "description": "Toggle the Float Console on/off",
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      }
    }
  },
  "content_scripts": [{
    "js": ["content/init.js"],
    "matches": ["<all_urls>"],
    "run_at": "document_start"
  }],
  "permissions": ["storage", "tabs", "scripting"],
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["content/cleanupLogger.js", "content/logger.js", "icons/*"]
  }]
}
